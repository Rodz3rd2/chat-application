<div id="frame">
    <div id="sidepanel">
        <div id="profile">
            <div class="wrap">
                <img id="profile-img" src="{{ img(auth_user.get.picture) }}" class="online" alt="" />
                <p>{{ auth_user.get.getFullName() }}</p>
                <i class="fa fa-chevron-down expand-button" aria-hidden="true"></i>
                <div id="expanded">
                    <a href="javascript:void(0)" class="btn-signout" onclick="document.getElementById('logout-form').submit();">
                        Sign out <i class="fa fa-sign-out"></i>
                    </a>
                </div>
            </div>
        </div>
        {# <div id="search">
            <label for=""><i class="fa fa-search" aria-hidden="true"></i></label>
            <input type="text" placeholder="Search contacts..." />
        </div> #}
        <div id="contacts">
            <ul>
                {% for index, contact in contacts %}
                    <li class="contact {{ index == 0 ? "active" }}" data-id="{{ contact.id }}">
                        <div class="wrap">
                            <span class="contact-status {{ contact.chatStatus.isOnline() ? "online" }}"></span>
                            <img class="image" src="{{ contact.picture }}" alt="" />
                            <div class="meta">
                                <i class="badge">{{ contact.numberOfUnread(auth_user.get.id) }}</i>
                                <p class="name">{{ contact.getFullName() }}</p>
                                <p class="preview">
                                    {% if contact.messages().get().isNotEmpty() %}
                                        {{ contact.messages().get().last().sender_id == auth_user.get.id ? "<span>You: </span>" }}
                                        {{ contact.messages().get().last().message }}
                                        {{ contact.messages().get().last() | json_encode }}
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="content">
        <div class="contact-profile">
            <img src="{{ contacts[0].picture }}" alt="" />
            <p>{{ contacts[0].getFullName() }}</p>
        </div>
        <div class="messages">
            <ul>
                {% if initial_conversation.isNotEmpty() %}
                    {% for convo in initial_conversation %}
                        <li class="{{ convo.user.id == auth_user.get.id ? "sent" : "replies" }}">
                            <img src="{{ convo.user.picture }}" alt="" />
                            <p>{{ convo.message }}</p>
                        </li>
                    {% endfor %}
                {% else %}
                    <li class="no-conversation">No conversation.</li>
                {% endif %}
            </ul>
        </div>
        <div class="message-input">
            <div class="wrap">
                <input type="text" placeholder="Write your message..." id="input-message" autofocus />
                {# <i class="fa fa-paperclip attachment" aria-hidden="true"></i> #}
                <button class="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
</div>